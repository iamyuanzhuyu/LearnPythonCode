height = input("please input your height by kg")
weight = input("please input your weight by meter")

HEIGHT = float(height)
WEIGHT = float(weight)

BMI = WEIGHT/(HEIGHT**2)

if BMI < 18.5 :
    print("Underweight")

elif BMI < 25 :
    print("Normal weight")

elif BMI < 28 :
    print(" Overweight")

elif BMI < 32 :
    print("Obesity")

else:
    print("Severe obesity")
